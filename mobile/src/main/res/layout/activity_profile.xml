<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.fatih.runforlife.ProfileActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="33dp"
        android:layout_marginStart="33dp"
        android:layout_marginTop="40dp"
        app:srcCompat="@drawable/com_facebook_profile_picture_blank_square"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/displayNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="67dp"
        android:layout_marginTop="11dp"
        android:text="TextView"
        android:layout_alignTop="@+id/imageView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/emailText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignLeft="@+id/displayNameText"
        android:layout_alignStart="@+id/displayNameText"
        android:layout_marginBottom="17dp"
        android:text="TextView" />

    <Button
        android:background="#294543"
        android:id="@+id/arkadasEkleBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="arkadasEkle"
        android:text="ArkadaÅŸ Ekle"
        android:layout_below="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:layout_marginTop="25dp" />

    <Button
        android:background="#294543"
        android:id="@+id/messageBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chat"
        android:layout_marginStart="10dp"
        android:layout_alignBaseline="@+id/arkadasEkleBtn"
        android:layout_alignBottom="@+id/arkadasEkleBtn"
        android:layout_alignStart="@+id/emailText" />

    <ListView
        android:padding="15dp"
        android:id="@+id/listActivite"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/messageBtn"
        android:layout_marginTop="15dp"
        android:layout_toStartOf="@+id/messageBtn"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
